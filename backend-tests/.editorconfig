# EditorConfig is awesome: https://editorconfig.org

# Unix-style newlines with a newline ending every file and tab indentation
[**]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = tab

[**.{md,yml}]
indent_style = unset
